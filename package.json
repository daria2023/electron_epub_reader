{
  "name": "epub_reader",
  "version": "1.0.0",
  "description": "web_epub_reader",
  "main": "main.js",
  "scripts": {
    "test": "nodemon serve.js",
    "start": "electron .",
    "serve": "npm run test && npm run start",
    "build": "electron-builder build"
  },
  "keywords": [
    "epub",
    "web"
  ],
  "author": "daria2023",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.lane.reader.app",
    "productName": "LaneReader",
    "copyright": "Copyright Â© 2023 daria",
    "directories": {
      "output": "out"
    },
    "extraResources": [
      "holder.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
